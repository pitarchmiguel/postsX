// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                String   @id @default(cuid())
  email             String   @unique
  supabaseUserId    String   @unique // Supabase Auth user ID

  // X (Twitter) connection
  xAccessToken      String?
  xRefreshToken     String?
  xTokenExpiresAt   DateTime?
  xClientId         String?
  xUsername         String?
  xName             String?
  xProfileImageUrl  String?

  // User timezone preference
  timezone          String   @default("Europe/Madrid")

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  posts             Post[]
  feedback          Feedback[]

  @@index([supabaseUserId])
  @@index([email])
}

model Post {
  id          String    @id @default(cuid())
  userId      String?   // Owner of the post (optional during migration)
  user        User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  status      String    // DRAFT | SCHEDULED | PUBLISHED | FAILED
  text        String
  threadJson  String?   // JSON array for thread mode
  scheduledAt DateTime?
  publishedAt DateTime?
  tags        String    @default("") // comma-separated or JSON
  xTweetId    String?   // X API tweet ID after publish
  communityId String?   // X Community ID (null = regular feed)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  metrics     Metric[]

  @@index([userId])
  @@index([status])
  @@index([scheduledAt])
}

model Metric {
  id          String   @id @default(cuid())
  postId      String
  post        Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  capturedAt  DateTime @default(now())
  impressions Int      @default(0)
  likes       Int      @default(0)
  replies     Int      @default(0)
  reposts     Int      @default(0)
  bookmarks   Int      @default(0)

  @@index([postId])
}

model Setting {
  id       String   @id @default(cuid())
  key      String   @unique
  valueJson String  @default("{}")
  updatedAt DateTime @updatedAt
}

model Feedback {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  text      String
  type      String   // bug | feature | suggestion | other
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}
